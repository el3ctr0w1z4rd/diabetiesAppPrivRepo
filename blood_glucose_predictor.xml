<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bgPredictorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#F4F6FA">

    <!-- Blood Glucose Display -->
    <TextView
        android:id="@+id/bloodGlucose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current BG: N/A"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#3A3A3C"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <TextView
        android:id="@+id/status"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="20sp" />

    <!-- Log Blood Glucose Button -->


    <Button
        android:id="@+id/logBloodGlucose"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Log B.G."
        android:textColor="#FFFFFF"
        android:backgroundTint="#5C6BC0"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bloodGlucose"
        android:layout_marginTop="140dp" />

    <!-- Predict Button -->
    <Button
        android:id="@+id/predictButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Predict"
        android:textColor="#FFFFFF"
        android:backgroundTint="#26A69A"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logBloodGlucose"
        android:layout_marginTop="30dp" />

    <!-- Back Button -->
    <Button
        android:id="@+id/backButtonGP"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:backgroundTint="#000000"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp" />


</RelativeLayout>
