<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF3F3"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:textSize="44sp"
        android:text="DiabeticApp"
        android:textColor="#5D3FD3"
        android:textStyle="bold" />

    <Button
        android:id="@+id/launchAppButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appName"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#5D3FD3"
        android:textColor="#FFFFFF"
        android:text="Launch App"
        android:textStyle="bold" />

    <Button
        android:id="@+id/tosButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/launchAppButton"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#7A5DC7"
        android:textColor="#FFFFFF"
        android:text="Terms of Service"
        android:textStyle="bold" />
</RelativeLayout>
